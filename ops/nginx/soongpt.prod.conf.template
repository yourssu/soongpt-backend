server {
    listen 80;
    listen [::]:80;
    server_name ${SERVER_NAME};

    # The production domain might strictly handle HTTPS, but this handles HTTP initially.
    # The Let's Encrypt script will modify this to redirect to HTTPS.

    access_log /var/log/nginx/soongpt.access.log;
    error_log /var/log/nginx/soongpt.error.log;

    client_max_body_size 20m;

    location / {
        # This proxy_pass directive is updated by the deployment script.
        # It must match the pattern: proxy_pass http://127.0.0.1:[0-9]+;
        proxy_pass http://127.0.0.1:${SERVER_PORT};

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_connect_timeout 5s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    location /actuator/health {
        proxy_pass http://127.0.0.1:${SERVER_PORT};
        access_log off;
    }
}
